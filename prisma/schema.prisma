generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstname String
  lastname  String
  email     String   @unique
  telephone String
  password  String
  profil    String?

  //all relations

}

model Doctor {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstname String
  lastname  String
  email     String   @unique
  telephone String
  password  String
  profil    String?
  //new fields
  hopital   String // je vais enlever cette partie.
  numOrdreNational String

  //all relations
  blood   Blood[]
  reserve reservation[]
}

model Blood {
  id            String       @id @default(cuid())
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  bloodGroupe   String
  //new fields
  quantity      Int
  //add the product type
  productType   String
  //all relations
  reserve       reservation? @relation(fields: [reservationId], references: [id])
  Doctor        Doctor?      @relation(fields: [doctorId], references: [id])
  doctorId      String?
  reservationId String?
  bloodBank     bloodBank?   @relation(fields: [bloodBankId], references: [id])
  bloodBankId   String?
}

model reservation {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt  
  pocketNumber Int

  //all relation
  Doctor      Doctor?   @relation(fields: [doctorId], references: [id])
  doctorId    String?
  Blood       Blood[]
  bloodBank   bloodBank @relation(fields: [bloodBankId], references: [id])
  bloodBankId String
}

model bloodBank {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  nameBankBlood String   @unique
  adresse       String
  longitude     Float?
  lagitude      Float?
  //les nouvelles infos a complete
  //horraires d'ouverture et de fermeture
  //numero de telephone
  //email

  //all relations
  blood       Blood[]
  reservation reservation[]
}

